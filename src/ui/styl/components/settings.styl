.settings {
  z-index: 1000;
  position: absolute;
  right:  2vmin;
  bottom: 2vmin;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .35);
  border-radius: 2px;
  font-size: 1.6vmin;
  width:  30vmin;
  height: 30vmin;
  padding: 2vmin;
  transform: scale(.2);
  opacity: 0;
  transform-origin: 100% 100%;
  transition: unquote("all 200ms cubic-bezier(0.250, 0.460, 0.450, 0.940)");
  themifyAll({
    background: card-bg-color,
    color:      main-txt-color,
  });
}
.settings:hover {
  opacity: 1;
  transform: scale(1);
}
.settings__item {
  cursor: pointer;
  display: block;
}
